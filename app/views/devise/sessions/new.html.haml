.hero-unit.specialunit
  .centered
    %h2 Sign In
    %br/
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %div
        = f.label :login
        = f.text_field :login, :autofocus => true
      %div
        = f.label :password
        = f.password_field :password
      - if devise_mapping.rememberable?
        %div
          = f.check_box :remember_me, class: "floatleft"
          = f.label :remember_me, class: "floatleft leftmargin"
      %br/
      %br/
      %div
        = f.submit "Sign In To CHAD Services Portal", :class => "btn btn-success"
    = render "devise/shared/links"